{
  "name": "@rolexjs/core",
  "version": "0.10.0",
  "description": "RoleX Core - AI Agent Role Management Framework",
  "keywords": [
    "rolex",
    "role",
    "agent",
    "ai"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deepractice/RoleX.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "gen:desc": "bun run scripts/gen-descriptions.ts",
    "build": "bun run gen:desc && tsup",
    "test": "bun test || true",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@rolexjs/parser": "workspace:*",
    "@rolexjs/system": "workspace:*",
    "graphology": "^0.26.0",
    "graphology-types": "^0.24.8",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@cucumber/messages": "^32.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
